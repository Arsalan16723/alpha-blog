<h1>Edit Existing Article</h1>

<% if @article.errors.any? %>
	<h2>The following errors Occured</h2>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for @article do |g| %>
	<p>
		<%= g.label :title %><br>
		<%= g.text_field :title %>
	</p>
	<p>
		<%= g.label :description%> <br>
		<%= g.text_area :description%>
	</p>
	<P>
		<%= g.submit %>
	</P>

<% end %>

<%= link_to " Back to  Articles", articles_path %>