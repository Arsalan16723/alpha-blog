<%= render 'shared/errors', obj: @user%> 
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |g| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
				
					<%= g.label :username %>
				</div>
				<div class="col-sm-8">
					<%= g.text_field :username, class: "form-control", placeholder: "Enter user name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= g.label :email%> <br>
				</div>
				<div class="col-sm-8">
					<%= g.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true%>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= g.label :password%> <br>
				</div>
				<div class="col-sm-8">
					<%= g.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus: true%>
				</div>
			</div>
				
			<div class="form-group">
				<div class="col-sm-offset-2  col-sm-10">
					<%= g.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-primary btn-lg")%>
				</div>
			</div>
			
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel and Back to  Articles", articles_path %> ]
		</div>
	</div>
</div>